server_tokens off;

# Rewrite http://www.{{ domain_name }} to https://{{ domain_name }}
server {
    listen [::]:80;
    listen 80;
    server_name  www.{{ domain_name }};
    ssl off;
    # Include location directive for Let's Encrypt ACME Challenge
    include /etc/nginx/snippets/letsencrypt-acme-challenge.conf;
    location / {
        rewrite ^ https://$server_name$request_uri? permanent;
    }
}

# Rewrite http://mail.{{ domain_name }} to https://mail.{{ domain_name }}
server {
    listen [::]:80;
    listen 80;
    ssl off;
    server_name  mail.{{ domain_name }};
    include /etc/nginx/snippets/letsencrypt-acme-challenge.conf;
    location / {
        rewrite ^ https://mail.$server_name$request_uri? permanent;
    }
}

# Rewrite http://{{ domain_name }} to https://{{ domain_name }}
server {
    listen [::]:80;
    listen 80;
    ssl off;
    server_name {{ domain_name }} ;
    include /etc/nginx/snippets/letsencrypt-acme-challenge.conf;
    location / {
        rewrite ^ https://$server_name$request_uri? permanent;
    }
}

# Rewrite https://www.{{ domain_name }} to https://{{ domain_name }}
server {
    listen [::]:443;
    listen 443;
    server_name  www.{{ domain_name }};
    include /etc/nginx/snippets/letsencrypt-acme-challenge.conf;
}

# And now the server configuration
server {
    listen 443 ssl default deferred;
    listen [::]:443 ssl default deferred;
    ssl on;
    server_name {{ domain_name }};

    root /var/www/{{ domain_name }};
    index index.html index.htm;

    location / {
        try_files $uri $uri/ =404;
    }
    include /etc/nginx/snippets/letsencrypt-acme-challenge.conf;
}

# Separate server config for mail
server {
    listen 443 ssl;
    listen [::]:443 ssl;
    ssl on;
    server_name mail.{{ domain_name }};

    location / {
        proxy_pass      http://localhost:8081/;
        proxy_redirect  / /;
        proxy_read_timeout 60s;

        # May not need or want to set Host. Should default to the above hostname.
        proxy_set_header          Host            $host;
        proxy_set_header          X-Real-IP       $remote_addr;
        proxy_set_header          X-Forwarded-For $proxy_add_x_forwarded_for;
    }
    include /etc/nginx/snippets/letsencrypt-acme-challenge.conf;
}
